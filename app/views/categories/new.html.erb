<h1 align="center"> Create a Category </h1>

<%= render "shared/errors", obj: @category %>

<%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :name %>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :name, class: "form-control", placeholder: "Category Name", autofocus: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit(@category.new_record? ? "Create Category" : "Update Account", class: "btn btn-primary btn-large") %>
      </div>
    </div>
<% end %>
<div class="col-xs-8 col-xs-offset-4">
    [ <%= link_to "Cancel and Return to Article Listings", articles_path %> ]
</div>  
